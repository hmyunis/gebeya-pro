---
import Layout from "../../layouts/Layout.astro";
import MerchantApplicationApp from "@/features/merchants/components/MerchantApplicationApp";
---

<Layout title="Apply as Merchant" mainClass="max-w-5xl mx-auto px-4 pt-28 pb-16">
  <section class="space-y-6">
    <div class="text-center">
      <p class="text-[11px] uppercase tracking-[0.35em] text-ink-muted">Seller Program</p>
      <h1 class="font-display mt-2 text-4xl leading-tight">Become a Merchant</h1>
      <p class="mt-2 text-sm text-ink-muted">
        Apply to list your products and manage incoming orders from your dashboard.
      </p>
    </div>
    <MerchantApplicationApp client:only="react">
      <div slot="fallback" class="mx-auto max-w-3xl animate-pulse space-y-6">
        <div class="theme-form-shell rounded-3xl p-6 md:p-8">
          <div class="theme-skeleton h-3 w-36 rounded-full"></div>
          <div class="theme-skeleton mt-3 h-8 w-64 rounded-2xl"></div>
          <div class="theme-skeleton mt-3 h-3 w-72 rounded-full"></div>

          <div class="theme-card-subtle mt-7 rounded-2xl p-4">
            <div class="theme-skeleton h-4 w-28 rounded-full"></div>
            <div class="theme-skeleton mt-2 h-3 w-72 rounded-full"></div>
            <div class="theme-skeleton mt-4 h-12 w-56 rounded-xl"></div>
          </div>

          <div class="mt-6 grid gap-4 md:grid-cols-2">
            <div class="theme-skeleton h-14 rounded-xl"></div>
            <div class="theme-skeleton h-14 rounded-xl"></div>
          </div>
          <div class="theme-skeleton mt-4 h-28 rounded-2xl"></div>

          <div class="mt-6">
            <div class="theme-skeleton h-4 w-36 rounded-full"></div>
            <div class="theme-skeleton mt-2 h-3 w-60 rounded-full"></div>
            <div class="mt-4 flex flex-wrap gap-2">
              <div class="theme-skeleton h-8 w-28 rounded-full"></div>
              <div class="theme-skeleton h-8 w-24 rounded-full"></div>
              <div class="theme-skeleton h-8 w-32 rounded-full"></div>
              <div class="theme-skeleton h-8 w-20 rounded-full"></div>
            </div>
          </div>

          <div class="theme-skeleton mt-6 h-14 rounded-xl"></div>
          <div class="theme-skeleton mt-6 h-12 w-full rounded-2xl md:w-56"></div>
        </div>
      </div>
    </MerchantApplicationApp>
  </section>
</Layout>
