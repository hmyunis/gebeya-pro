---
import Layout from "../layouts/Layout.astro";
import AuthLogin from "@/features/auth/components/AuthLogin";
import { API_BASE, PUBLIC_TELEGRAM_BOT_NAME } from "@/config/env";
---

<Layout
  title="Login"
  showNavbar={false}
  mainClass="min-h-screen flex items-center justify-center px-4 py-16"
>
  <AuthLogin
    client:only="react"
    apiBase={API_BASE}
    telegramBot={PUBLIC_TELEGRAM_BOT_NAME}
  >
    <div slot="fallback" class="w-full max-w-xl animate-pulse">
      <div class="rounded-[30px] border border-black/10 bg-white/85 p-6 md:p-8">
        <div class="h-8 w-20 rounded-full bg-black/10"></div>
        <div class="mt-5 flex items-center gap-4">
          <div class="h-12 w-12 rounded-2xl bg-black/10"></div>
          <div class="space-y-2">
            <div class="h-7 w-40 rounded-xl bg-black/10"></div>
            <div class="h-3 w-52 rounded-full bg-black/10"></div>
          </div>
        </div>

        <div class="mt-6 space-y-2">
          <div class="h-3 w-full rounded-full bg-black/10"></div>
          <div class="h-3 w-5/6 rounded-full bg-black/10"></div>
          <div class="h-3 w-2/3 rounded-full bg-black/10"></div>
        </div>

        <div class="mt-7 space-y-3">
          <div class="h-10 rounded-xl bg-black/10"></div>
          <div class="h-14 rounded-2xl bg-black/10"></div>
          <div class="h-14 rounded-2xl bg-black/10"></div>
          <div class="h-12 rounded-2xl bg-black/10"></div>
          <div class="h-24 rounded-3xl bg-black/10"></div>
        </div>
      </div>
    </div>
  </AuthLogin>
</Layout>
